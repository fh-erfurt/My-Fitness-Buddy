<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="PME.myfitnessbuddy.view.ui.exercise.createExerciseFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="72dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--Put form controls here-->

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ãœbungsname" />

        <EditText
            android:id="@+id/createExerciseName"
            android:layout_width="401dp"
            android:layout_height="88dp"
            android:hint="blub"

            android:textAlignment="viewStart"></EditText>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beschreibung" />

        <EditText
            android:id="@+id/createExerciseDescription"
            android:layout_width="401dp"
            android:layout_height="88dp"
            android:hint="blub"

            android:textAlignment="viewStart"></EditText>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muskelgruppe" />

        <Spinner
            android:id="@+id/createExerciseMuscleGroup"
            android:layout_width="fill_parent"

            android:layout_height="wrap_content"
            android:entries="@array/feedbacktypelist"></Spinner>

        <Button
            android:id="@+id/btnCreateExercise"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:text="Erstellen"></Button>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

