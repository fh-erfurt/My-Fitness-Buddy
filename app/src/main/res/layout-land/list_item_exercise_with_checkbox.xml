<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal"
    style="@style/TransparentPrimaryBackround">




    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp">


        <ImageView
            android:id="@+id/list_item_exercise_with_checkbox_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:srcCompat="@drawable/dumbell" />

    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <CheckedTextView
        android:id="@+id/checked_text_item"
        style="@style/defaultCheckedTextView"
        android:layout_width="672dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="left|center_vertical"
        android:padding="5dp"
        android:text="@string/create_exercise_name"
        android:textSize="22sp"

        />
</LinearLayout>


</LinearLayout>